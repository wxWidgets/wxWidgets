                        grep awidetest >/dev/null
                    then
                        wx_cv_gcc_pch_bug=no
                    else
                        wx_cv_gcc_pch_bug=yes
                    fi
                fi
            fi

            rm -f conftest.h conftest.gch conftest.cpp conftest$PROGRAM_EXT
