    fi

    dnl check if <string> declares std::[w]string
    AC_CACHE_CHECK([for $std_string in <string>],
        wx_cv_class_stdstring,
        [
            AC_TRY_COMPILE([#include <string>],
                [$std_string foo;],
                wx_cv_class_stdstring=yes,
