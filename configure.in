            else
                dnl it doesn't
                CFLAGS="$CFLAGS_OLD"
            fi
        ;;
        *-pc-os2*emx )
	    CFLAGS="$CFLAGS -Zmt -D__ST_MT_ERRNO__"	
	    CXXFLAGS="$CXXFLAGS -Zmt -D__ST_MT_ERRNO__"	
